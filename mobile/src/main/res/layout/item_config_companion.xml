<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Switch android:id="@+id/btn_config_binary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            style="@style/AppTheme.Config.Text"/>

    <TextView
        android:id="@+id/txt_config_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        style="@style/AppTheme.Config.Title"/>

    <TextView
        android:id="@+id/txt_config_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/txt_config_title"
        style="@style/AppTheme.Config.Description"/>

</RelativeLayout>